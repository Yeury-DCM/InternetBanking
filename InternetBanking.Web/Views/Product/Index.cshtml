@using InternetBanking.Core.Application.ViewModels.DasboardVMS
@model DashboardViewModel

@{
    ViewData["Title"] = "Home Page";
    var errorMessage = TempData["ErrorMessage"] as string;
}

<div class="container my-5">
    <h2 class="text-center text-dark fw-bold mb-4">📌 Resumen de Productos</h2>

    <div class="row g-4">
        <!-- Cuentas Bancarias -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-primary text-white text-center fw-bold rounded-top-4">
                    <h5 class="fw-bold m-3">Cuentas Bancarias</h5>
                </div>
                <div class="card-body">
                    <div style="max-height: 200px; overflow-y: auto;">
                        @foreach (var product in Model.products)
                        {
                            if (product.ProductTypeID == 1)
                            {
                                <ul class="list-group list-group-flush rounded-bottom-4">
                                    <li class="list-group-item rounded-3 mb-2">
                                        <div class="d-flex justify-content-between">
                                            <span class="fw-semibold">@product.productType.Type</span>
                                            <span class="text-success fw-bold">@product.Balance</span>
                                        </div>
                                    </li>
                                </ul>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Tarjetas de Crédito -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-danger text-white text-center fw-bold rounded-top-4">
                    <h5 class="fw-bold m-3">Tarjetas de Crédito</h5>
                </div>
                <div class="card-body">
                    <div style="max-height: 200px; overflow-y: auto;">
                        @foreach (var product in Model.products)
                        {
                            if (product.ProductTypeID == 2)
                            {
                                <ul class="list-group list-group-flush rounded-bottom-4">
                                    <li class="list-group-item rounded-3 mb-2">
                                        <div class="d-flex justify-content-between">
                                            <span class="fw-semibold">@product.productType.Type</span>
                                            <span class="text-success fw-bold">@product.Balance</span>
                                        </div>
                                    </li>
                                </ul>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Préstamos -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-warning text-dark text-center fw-bold rounded-top-4">
                    <h5 class="fw-bold m-3">Préstamos</h5>
                </div>
                <div class="card-body">
                    <div style="max-height: 200px; overflow-y: auto;">
                        @foreach (var product in Model.products)
                        {
                            if (product.ProductTypeID == 3)
                            {
                                <ul class="list-group list-group-flush rounded-bottom-4">
                                    <li class="list-group-item rounded-3 mb-2">
                                        <div class="d-flex justify-content-between">
                                            <span class="fw-semibold">@product.productType.Type</span>
                                            <span class="text-success fw-bold">@product.Balance</span>
                                        </div>
                                    </li>
                                </ul>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Transacciones Recientes -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-info text-white text-center fw-bold rounded-top-4">
                    <h5 class="fw-bold m-3">Transacciones Recientes</h5>
                </div>
                <div class="card-body">
                    <div style="max-height: 200px; overflow-y: auto;">
                        @foreach (var product in Model.transactions)
                        {
                            <ul class="list-group list-group-flush rounded-bottom-4">
                                <li class="list-group-item rounded-3 mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span class="fw-semibold">@product.transactionType.Type</span>
                                        <span class="text-success fw-bold">@product.Amount</span>
                                    </div>
                                </li>
                            </ul>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal de Error -->
<div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-gradient text-white" style="background: linear-gradient(135deg, #dc3545, #b71c1c);">
                <h5 class="modal-title" id="errorModalLabel">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> Error
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body text-center">
                <p class="fs-5 text-danger fw-semibold">@errorMessage</p>
            </div>
            <div class="modal-footer border-0 d-flex justify-content-center">
                <button type="button" class="btn btn-outline-danger px-4" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> Cerrar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Script para mostrar el modal si hay error -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var errorMessage = "@(errorMessage ?? "")";
        if (errorMessage.trim() !== "") {
            var errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
            errorModal.show();
        }
    });
</script>