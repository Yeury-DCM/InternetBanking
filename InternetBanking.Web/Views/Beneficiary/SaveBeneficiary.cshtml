@model InternetBanking.Core.Application.ViewModels.BeneficiaryVMS.SaveBeneficiaryViewModel
<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-dark text-light">
                    <h4>@(Model.Id == 0 ? "Agregar Beneficiario" : "Editar Beneficiario")</h4>
                </div>
                <div class="card-body">
                    @if (Model.Id == 0)
                    {
                        <form method="post" asp-controller="Beneficiary" asp-action="Create" enctype="application/x-www-form-urlencoded">
                            <div class="form-group mb-3">
                                <label for="Name" class="form-label">Nombre del Beneficiario</label>
                                <input type="text" class="form-control" id="Name" asp-for="BeneficiaryFirstName" required />
                                <span asp-validation-for="BeneficiaryFirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label for="AccountNumber" class="form-label">Número de Cuenta</label>
                                <input type="text" class="form-control" id="AccountNumber" asp-for="AccountNumber" required />
                                <span asp-validation-for="AccountNumber" class="text-danger"></span>
                            </div>
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="UserId" />
                            <input type="hidden" asp-for="ProductId" />
                            <div class="mt-3">
                                <button type="submit" class="btn btn-primary">Guardar</button>
                                <a asp-controller="Beneficiary" asp-action="Index" class="btn btn-warning">Volver atrás</a>
                            </div>
                        </form>
                    }
                    else
                    {
                        <form method="post" asp-controller="Beneficiary" asp-action="Edit" asp-route-id="@Model.Id">
                            <div class="form-group mb-3">
                                <label for="Name" class="form-label">Nombre del Beneficiario</label>
                                <input type="text" class="form-control" id="Name" asp-for="BeneficiaryFirstName" required />
                                <span asp-validation-for="BeneficiaryFirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label for="AccountNumber" class="form-label">Número de Cuenta</label>
                                <input type="text" class="form-control" id="AccountNumber" asp-for="AccountNumber" required />
                                <span asp-validation-for="AccountNumber" class="text-danger"></span>
                            </div>
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="UserId" />
                            <input type="hidden" asp-for="ProductId" />
                            <div class="mt-3">
                                <button type="submit" class="btn btn-primary">Guardar</button>
                                <a asp-controller="Beneficiary" asp-action="Index" class="btn btn-warning">Volver atrás</a>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}