@model InternetBanking.Core.Application.ViewModels.Beneficiary.SaveBeneficiaryViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-dark text-light">
                    <h4>Guardando a un beneficiario</h4>
                </div>
                <div class="card-body">

                    <form method="post" asp-controller="Beneficiary" asp-action="Create">
                        <div class="form-group">
                            <label for="Benefi">Beneficiary Name</label>
                            <input type="text" class="form-control" id="BeneficiaryFirstName" name="BeneficiaryFirstName" value="BeneficiaryFirstName" required>
                        </div>

                        <div class="form-group">
                            <label for="Benefi">Beneficiary Last Name</label>
                            <input type="text" class="form-control" id="BeneficiaryLastName" name="BeneficiaryLastName" value="BeneficiaryLastName" required>
                        </div>

                        <div class="form-group">
                            <label for="Benefi">Tipo de cuenta</label>
                            <input type="text" class="form-control" id="ProductType" name="ProductType" value="ProductType" required>
                        </div>

                        <div class="form-group">
                            <label for="Benefi">Numero de Cuenta</label>
                            <input type="text" class="form-control" id="AccountNumber" name="AccountNumber" value="AccountNumber" required>
                        </div>

                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <a asp-controller="Beneficiary" asp-action="Index" class="btn btn-warning">Volver atrás</a>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>