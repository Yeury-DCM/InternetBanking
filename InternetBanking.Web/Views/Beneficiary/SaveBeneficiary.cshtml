@model InternetBanking.Core.Application.ViewModels.Beneficiary.SaveBeneficiaryViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-er bg-dark text-light">
                    <h4>@(Model.Id == 0 ? "Agregar Beneficiario" : "Editar Beneficiario")</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Beneficiary" asp-action="@(Model.Id == 0 ? "Create" : "Edit")" asp-route-id="@Model.Id">
                        <div class="form-group">
                            <label for="BeneficiaryFirstName">Beneficiary Name</label>
                            <input type="text" class="form-control" id="BeneficiaryFirstName" asp-for="BeneficiaryFirstName" required />
                        </div>

                        <div class="form-group">
                            <label for="BeneficiaryLastName">Beneficiary Last Name</label>
                            <input type="text" class="form-control" id="BeneficiaryLastName" asp-for="BeneficiaryLastName" required />
                        </div>

                        <div class="form-group">
                            <label for="ProductType">Tipo de cuenta</label>
                            <input type="text" class="form-control" id="ProductType" asp-for="ProductType" required />
                        </div>

                        <div class="form-group">
                            <label for="AccountNumber">Numero de Cuenta</label>
                            <input type="text" class="form-control" id="AccountNumber" asp-for="AccountNumber" required />
                        </div>

                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-primary">@("Guardar")</button>
                        <a asp-controller="Beneficiary" asp-action="Index" class="btn btn-warning">Volver atrás</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
