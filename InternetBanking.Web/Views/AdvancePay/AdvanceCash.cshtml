@using InternetBanking.Core.Application.ViewModels.AdvanceCashVMS
@model AdvanceCashViewModel

<div class="container">
    <h2>Avance de Efectivo</h2>
    <form asp-controller="AdvanceCash" asp-action="AdvanceCash" method="post">
        <div class="form-group">
            <label for="CreditCardId">Seleccione Tarjeta de Crédito</label>
            <select class="form-control" id="CreditCardId" asp-for="CreditCardId" asp-items="ViewBag.CreditCards"></select>
        </div>
        <div class="form-group">
            <label for="SavingsAccountId">Seleccione Cuenta de Ahorros</label>
            <select class="form-control" id="SavingsAccountId" asp-for="SavingsAccountId" asp-items="ViewBag.SavingsAccounts"></select>
        </div>
        <div class="form-group">
            <label for="Amount">Monto del Avance</label>
            <input type="number" class="form-control" id="Amount" asp-for="Amount" />
        </div>
        <button type="submit" class="btn btn-primary">Realizar Avance</button>
    </form>
</div>
