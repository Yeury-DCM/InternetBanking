@using InternetBanking.Core.Application.ViewModels.PayementVMS
@using InternetBanking.Core.Application.Services
@model PaymentViewModel

@{
    ViewData["Title"] = "Confirmación de Pago";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center py-3">
            <h2 class="fw-bold"><i class="bi bi-shield-check"></i> Confirmación de Pago</h2>
        </div>
        <div class="card-body p-4">
            <h4 class="text-center text-secondary mb-4">Detalles de la Transacción</h4>

            <div class="row g-4">
                <div class="col-md-6">
                    <div class="border p-3 rounded bg-light">
                        <h5 class="fw-bold text-primary"><i class="bi bi-wallet"></i> Cuenta de Origen</h5>
                        <p><strong>Tipo:</strong> @Model.OriginProduct.productType.Type</p>
                        <p><strong>Número:</strong> @Model.OriginProduct.ProductNumber</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="border p-3 rounded bg-light">
                        <h5 class="fw-bold text-primary"><i class="bi bi-bank"></i> Cuenta Destino</h5>
                        <p><strong>Tipo:</strong> @Model.productType.Type</p>
                        <p><strong>Número:</strong> @Model.DestinationProductNumber</p>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <h4 class="fw-bold text-success"><i class="bi bi-cash"></i> Monto: $@Model.Amount</h4>
            </div>

            <form asp-controller="Payment" asp-action="ConfirmPayment" method="post">
                <input type="hidden" asp-for="OriginProduct.ProductNumber" />
                <input type="hidden" asp-for="PaymentType" />
                <input type="hidden" asp-for="DestinationProductNumber" />
                <input type="hidden" asp-for="Amount" />

                <div class="mt-4 d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-lg btn-success shadow">
                        <i class="bi bi-check-circle"></i> Confirmar Pago
                    </button>
                    <a asp-controller="Payment" asp-action="Express" class="btn btn-lg btn-danger shadow">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
