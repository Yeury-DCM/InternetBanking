@using InternetBanking.Core.Application.ViewModels.PayementVMS
@using InternetBanking.Core.Application.Services
@model SavePaymentViewModel;

@{
    ViewData["Title"] = "Payment-Express";
    Model.PaymentType = PaymentType.Express;
}
<div class="container-fluid">
    <div class="row mt-5">
        <div class="card shadow-sm">
            <div class="card-er">
                <h4>Realizar pago</h4>
                @Html.ValidationSummary(false, "", new { @class = "  text-danger" })
            </div>
            <div class="card-body">
                <form asp-controller="Payment" asp-action="ProcessPayment" method="post">
                    <input type="hidden" asp-for="PaymentType" />
                    <div>
                        <label asp-for="OriginProduct" class="form-label">Origen: </label>
                        <select asp-for="OriginProduct" class="form-select">
                            <option value="0">Cuentas</option>
                            @foreach (var product in Model.products)
                            {
                                if (product.ProductTypeID == 1)
                                {
                                    <option value="@product.ProductNumber">
                                        @($"{product.productType.Type} - {product.Balance:C}")
                                    </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="OriginProduct" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="DestinationProduct" class="form-label">Destino: </label>
                        <input asp-for="DestinationProduct" class="form-control" />
                        <span asp-validation-for="DestinationProduct" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Amount" class="form-label">Monto: </label>
                        <input asp-for="Amount" class="form-control" placeholder="0.00" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    <div class="btn btn-group">
                        <button type="submit" class="btn btn-primary">Confirmar</button>
                        <a asp-controller="Product" asp-action="Index" class="btn btn-warning">Volver</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

